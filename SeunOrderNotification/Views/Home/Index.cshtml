@{
    ViewData["Title"] = "Seun's Photographers Session Booking";
    List<User> users = ViewBag.Users;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="text-center mb-5">
                <h1 class="display-5 mb-3 text-warning">Photographers Session Booking</h1>
                <p class="lead text-muted">Select a Professional to Capture Your Moments</p>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark text-center py-3">
                    <h2 class="h4 mb-0">Available Photographers</h2>
                </div>

                @if (users.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var user in users)
                        {
                            <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-warning-subtle text-warning me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                        <span class="fw-bold">@user.Name.First().ToString().ToUpper()</span>
                                    </div>
                                    <div>
                                        <h5 class="mb-1">@user.Name</h5>
                                        <p class="text-muted small mb-0">Professional Photographer</p>
                                    </div>
                                </div>
                                <a asp-action="CreateOrder"
                                   asp-controller="Home"
                                   asp-route-userId="@user.Id"
                                   class="btn btn-outline-warning">
                                    Book Session
                                </a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="card-body text-center">
                        <div class="alert alert-warning" role="alert">
                            <h4 class="alert-heading">No Photographers Available</h4>
                            <p class="mb-0">We apologize, but no photographers are currently available.</p>
                            <hr>
                            <p class="mb-0">Please check back later or contact our support team.</p>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1 text-warning"></i>
                    Select a photographer to start your booking process
                </small>
            </div>
        </div>
    </div>
</div>