@model DashboardViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-8">
            <h2>Recent Orders</h2>
            <div class="row">
                @foreach (var order in Model.Orders.Take(4))
                {
                    <div class="col-12 col-md-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@order.CustomerName</h5>
                                <p class="card-text">@order.SessionDateTime.ToString("MMM dd, yyyy HH:mm")</p>
                                <p class="card-text">@order.SessionLengthMinutes minutes</p>
                                <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-12 col-md-4">
            <h2>Unread Notifications</h2>
            <div class="list-group">
                @foreach (var notification in Model.Notifications)
                {
                    <a href="#" class="list-group-item list-group-item-action @(notification.IsRead ? "" : "unread")">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">New Booking Request</h5>
                            <small>@((DateTime.UtcNow - notification.CreatedAt).TotalHours < 24 ? notification.CreatedAt.ToString("HH:mm") : notification.CreatedAt.ToString("MMM dd"))</small>
                        </div>
                        <p class="mb-1">From: @notification.Order.CustomerName</p>
                        <p class="mb-1">Date: @notification.Order.SessionDateTime.ToString("MMM dd, yyyy HH:mm")</p>
                        <p class="mb-1">Duration: @notification.Order.SessionLengthMinutes minutes</p>
                    </a>
                }
            </div>
        </div>
    </div>
</div>