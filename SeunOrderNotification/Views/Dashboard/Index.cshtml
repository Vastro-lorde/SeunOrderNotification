@model DashboardViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-8">
            <h2>Recent Orders</h2>
            <div class="row">
                @foreach (var order in Model.Orders.Take(4))
                {
                    <div class="col-12 col-md-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@order.CustomerName</h5>
                                <p class="card-text">@order.SessionDateTime.ToString("MMM dd, yyyy HH:mm")</p>
                                <p class="card-text">@order.SessionLengthMinutes minutes</p>
                                <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
                <a class="nav-link" asp-controller="Orders" asp-action="Index">More...</a>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <h2>Unread Notifications</h2>
            <div class="list-group">
                @await Html.PartialAsync("_NotificationList", Model.Notifications)
            </div>
        </div>
    </div>
</div>