<!-- Orders.cshtml -->
@model DashboardViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Orders</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        @foreach (var order in Model.Orders)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                @await Html.PartialAsync("_OrderCard", order)
            </div>
        }
    </div>
</div>